{
    "name": "mts7/php-dependency-injection",
    "description": "Simple dependency injection container for PHP",
    "minimum-stability": "stable",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "mts7/php-code-quality": "^0.1.12",
        "phpunit/phpunit": "^10.1",
        "roave/security-advisories": "dev-latest"
    },
    "provide": {
        "psr/container": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "MtsDependencyInjection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MtsDependencyInjection\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
